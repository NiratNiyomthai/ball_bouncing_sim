import turtle

# Set up the screen
screen = turtle.Screen()
screen.title("Pong Game")
screen.bgcolor("black")
screen.setup(width=800, height=600)
screen.tracer(0)

# Left paddle
left_paddle = turtle.Turtle()
left_paddle.speed(0)
left_paddle.shape("square")
left_paddle.color("white")
left_paddle.shapesize(stretch_wid=6, stretch_len=1)
left_paddle.penup()
left_paddle.goto(-350, 0)

# Right paddle
right_paddle = turtle.Turtle()
right_paddle.speed(0)
right_paddle.shape("square")
right_paddle.color("white")
right_paddle.shapesize(stretch_wid=6, stretch_len=1)
right_paddle.penup()
right_paddle.goto(350, 0)

# Ball
ball = turtle.Turtle()
ball.speed(40)
ball.shape("circle")
ball.color("white")
ball.penup()
ball.goto(0, 0)
ball.dx = 0.1
ball.dy = 0.1

# Score
left_score = 0
right_score = 0

# Display the score
score_display = turtle.Turtle()
score_display.speed(0)
score_display.color("white")
score_display.penup()
score_display.hideturtle()
score_display.goto(0, 260)
score_display.write("Player A: 0  Player B: 0", align="center", font=("Courier", 24, "normal"))


def update_score():
    score_display.clear()
    score_display.write(f"Player A: {left_score}  Player B: {right_score}",
                        align="center", font=("Courier", 24, "normal"))


# Paddle movement flags
left_paddle_up_pressed = False
left_paddle_down_pressed = False
right_paddle_up_pressed = False
right_paddle_down_pressed = False

# Paddle movement handlers
def press_left_paddle_up():
    global left_paddle_up_pressed
    left_paddle_up_pressed = True


def release_left_paddle_up():
    global left_paddle_up_pressed
    left_paddle_up_pressed = False


def press_left_paddle_down():
    global left_paddle_down_pressed
    left_paddle_down_pressed = True


def release_left_paddle_down():
    global left_paddle_down_pressed
    left_paddle_down_pressed = False


def press_right_paddle_up():
    global right_paddle_up_pressed
    right_paddle_up_pressed = True


def release_right_paddle_up():
    global right_paddle_up_pressed
    right_paddle_up_pressed = False


def press_right_paddle_down():
    global right_paddle_down_pressed
    right_paddle_down_pressed = True


def release_right_paddle_down():
    global right_paddle_down_pressed
    right_paddle_down_pressed = False


# Keyboard bindings
screen.listen()
screen.onkeypress(press_left_paddle_up, "w")
screen.onkeyrelease(release_left_paddle_up, "w")
screen.onkeypress(press_left_paddle_down, "s")
screen.onkeyrelease(release_left_paddle_down, "s")
screen.onkeypress(press_right_paddle_up, "Up")
screen.onkeyrelease(release_right_paddle_up, "Up")
screen.onkeypress(press_right_paddle_down, "Down")
screen.onkeyrelease(release_right_paddle_down, "Down")

# Main game loop
while True:
    screen.update()

    # Continuous paddle movement
    if left_paddle_up_pressed and left_paddle.ycor() < 250:
        left_paddle.sety(left_paddle.ycor() + .5)
    if left_paddle_down_pressed and left_paddle.ycor() > -240:
        left_paddle.sety(left_paddle.ycor() - .5)
    if right_paddle_up_pressed and right_paddle.ycor() < 250:
        right_paddle.sety(right_paddle.ycor() + .5)
    if right_paddle_down_pressed and right_paddle.ycor() > -240:
        right_paddle.sety(right_paddle.ycor() - .5)

    # Move the ball
    ball.setx(ball.xcor() + ball.dx)
    ball.sety(ball.ycor() + ball.dy)

    # Ball collision with top wall
    if ball.ycor() > 290:
        ball.sety(290)
        ball.dy *= -1

    # Ball collision with bottom wall
    if ball.ycor() < -290:
        ball.sety(-290)
        ball.dy *= -1

    # Ball collision with paddles
    if (350 > ball.xcor() > 340) and (right_paddle.ycor() - 50 < ball.ycor() < right_paddle.ycor() + 50):
        ball.setx(340)
        ball.dx *= -1

    if (-350 < ball.xcor() < -340) and (left_paddle.ycor() - 50 < ball.ycor() < left_paddle.ycor() + 50):
        ball.setx(-340)
        ball.dx *= -1

    # Ball out of bounds (right side)
    if ball.xcor() > 390:
        ball.goto(0, 0)
        ball.dx *= -1
        left_score += 1
        update_score()

    # Ball out of bounds (left side)
    if ball.xcor() < -390:
        ball.goto(0, 0)
        ball.dx *= -1
        right_score += 1
        update_score()
